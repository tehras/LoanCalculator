<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360">

    <layer-list>
        <item>
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="20"
                android:useLevel="false">

                <size
                    android:width="140dip"
                    android:height="140dip"/>

                <gradient
                    android:angle="0"
                    android:endColor="@color/colorAccent"
                    android:startColor="@android:color/transparent"
                    android:type="linear"
                    android:useLevel="false"/>

            </shape>
        </item>
        <item>
            <shape
                android:innerRadiusRatio="2.98"
                android:shape="ring"
                android:thicknessRatio="60"
                android:useLevel="false">

                <gradient
                    android:angle="90"
                    android:endColor="@color/colorAccent"
                    android:startColor="@android:color/transparent"
                    android:type="linear"
                    android:useLevel="false"/>

            </shape>
        </item>
        <item>
            <shape
                android:dither="true"
                android:innerRadiusRatio="2.65"
                android:shape="ring"
                android:thicknessRatio="60"
                android:useLevel="false">


                <gradient
                    android:angle="45"
                    android:endColor="@color/colorAccent"
                    android:startColor="@android:color/transparent"
                    android:type="linear"
                    android:useLevel="false"/>

            </shape>
        </item>
    </layer-list>

</rotate>