<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/view_loan_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/constraintLayout6"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-16dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_chevron_white" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_large"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/white"
        android:elevation="@dimen/default_elevation"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/view_simple_information_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/view_loan_title_information"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout6"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout6"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:text="@string/loan_name_help_content"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout6"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout6"
            app:layout_constraintTop_toBottomOf="@+id/view_simple_information_view" />

        <com.koshkin.loancaluclator.loancalculator.views.AppCompatEditTextFullLayout
            android:id="@+id/view_loan_information_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:hint="@string/new_loan_loan_name"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout6"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout6"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:text="@string/loan_provider_helper_text"
            app:layout_constraintLeft_toLeftOf="@+id/textView5"
            app:layout_constraintRight_toRightOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/view_loan_information_name" />

        <com.koshkin.loancaluclator.loancalculator.views.AppCompatEditTextFullLayout
            android:id="@+id/view_loan_information_provider_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:hint="@string/new_loan_provider"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"
            app:layout_constraintRight_toRightOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>