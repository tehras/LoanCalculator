<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin_large">

    <TextView
        android:id="@+id/landing_bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_title"
        android:textColor="@android:color/white"
        tools:text="title"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/landing_bottom_sheet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/landing_bottom_sheet_title"
        app:layout_constraintTop_toBottomOf="@+id/landing_bottom_sheet_title"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_loan_name"
        android:textColor="@android:color/white"
        tools:text="Loan Name"
        app:layout_constraintLeft_toLeftOf="@+id/landing_bottom_sheet_name"
        app:layout_constraintTop_toBottomOf="@+id/landing_bottom_sheet_name" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/landing_bottom_sheet_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@android:color/white"
        tools:text="$64,300,000"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_current_balance"
        android:textColor="@android:color/white"
        tools:text="Current Balance"
        app:layout_constraintLeft_toLeftOf="@+id/landing_bottom_sheet_balance"
        app:layout_constraintTop_toBottomOf="@+id/landing_bottom_sheet_balance" />

    <TextView
        android:id="@+id/landing_bottom_sheet_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@android:color/white"
        tools:text="2.323%"
        app:layout_constraintTop_toTopOf="@+id/landing_bottom_sheet_balance"
        app:layout_constraintRight_toRightOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_interest"
        android:textColor="@android:color/white"
        tools:text="Interest"
        app:layout_constraintTop_toBottomOf="@+id/landing_bottom_sheet_interest"
        app:layout_constraintRight_toRightOf="@+id/landing_bottom_sheet_as_of_date" />

    <TextView
        android:id="@+id/landing_bottom_sheet_payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@android:color/white"
        tools:ignore="MissingConstraints"
        tools:text="20"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_payments"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/landing_bottom_sheet_payments"
        app:layout_constraintTop_toBottomOf="@+id/landing_bottom_sheet_payments" />

    <TextView
        android:id="@+id/landing_bottom_sheet_as_of_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@android:color/white"
        tools:text="Jan 23, 2014"
        app:layout_constraintTop_toTopOf="@+id/landing_bottom_sheet_payments"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_as_of_date"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/landing_bottom_sheet_as_of_date"
        app:layout_constraintRight_toRightOf="@+id/landing_bottom_sheet_as_of_date" />


</android.support.constraint.ConstraintLayout>